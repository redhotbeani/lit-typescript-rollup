{
	"compilerOptions": {
		"target": "es2018",
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"lib": [
			"es2017",
			"dom"
		],
		"strict": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"sourceMap": true,
		"inlineSources": true,
		"declaration": false,
		"plugins": [
			{
				"name": "ts-lit-plugin",
				"strict": true,
				"rules": {
					"no-missing-import": "off"
				}
			}
		]
	},
	"include": ["./src/**/*.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"build"
	]
}
